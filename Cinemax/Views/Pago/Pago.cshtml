@{
    ViewBag.Title = "Pago";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h1 class="card-title mb-4">Datos personales</h1>

            <form id="paymentForm">
                <div class="mb-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    <h2 class="h5 mb-3">Elegir forma de pago</h2>

                    <div class="d-grid gap-3">
                        <div class="payment-option p-3 border rounded" data-method="paypal">
                            <div class="d-flex align-items-center">
                                <img src="https://cdn.pixabay.com/photo/2018/05/08/21/29/paypal-3384015_640.png" alt="PayPal" class="payment-icon me-3" style="width: 40px; height: 40px;">
                                <span>Paypal</span>
                            </div>
                        </div>
                        <div class="payment-option selected p-3 border rounded" data-method="efectivo">
                            <div class="d-flex align-items-center">
                                <img src="https://png.pngtree.com/png-clipart/20200224/original/pngtree-cash-in-hand-icon-cartoon-style-png-image_5211912.jpg" alt="Efectivo" class="payment-icon me-3" style="width: 40px; height: 40px;">
                                <span>Efectivo</span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="metodoPago" name="metodoPago" value="efectivo">
                </div>

                <hr class="my-4">

                <div>
                    <div id="paymentSelectionInfo" class="mb-3">
                        Método seleccionado: <strong>Efectivo</strong>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Realizar reserva</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Esperar a que jQuery esté cargado
    function waitForJQuery() {
        if (window.jQuery) {
            $(document).ready(function () {
                // Manejar selección de método de pago
                $('.payment-option').click(function () {
                    $('.payment-option').removeClass('selected border-primary bg-light');
                    $(this).addClass('selected border-primary bg-light');

                    const metodo = $(this).data('method');
                    $('#metodoPago').val(metodo);

                    // Mostrar el método seleccionado
                    const metodoTexto = metodo === 'paypal' ? 'PayPal' : 'Efectivo';
                    $('#paymentSelectionInfo').html('Método seleccionado: <strong>' + metodoTexto + '</strong>');
                });

                // Manejar envío del formulario
                $('#paymentForm').submit(function (e) {
                    e.preventDefault();

                    // Validación básica
                    if (!$('#nombre').val() || !$('#apellido').val() || !$('#email').val()) {
                        alert('Por favor complete todos los campos');
                        return;
                    }

                    // Datos del formulario
                    const formData = {
                        nombre: $('#nombre').val(),
                        apellido: $('#apellido').val(),
                        email: $('#email').val(),
                        metodoPago: $('#metodoPago').val()
                    };

                    console.log('Datos del formulario:', formData);
                    alert('Reserva realizada con éxito!\nMétodo de pago: ' +
                        (formData.metodoPago === 'paypal' ? 'PayPal' : 'Efectivo'));

                    // Aquí puedes agregar AJAX para enviar al servidor
                    // $.post('/TuControlador/TuAccion', formData, function(response) {
                    //     // Manejar respuesta
                    // });
                });
            });
        } else {
            setTimeout(waitForJQuery, 100);
        }
    }

    // Iniciar la espera de jQuery
    waitForJQuery();
</script>
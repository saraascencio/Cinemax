@{
    ViewBag.Title = "Dashboard";
    Layout = null; //   Este es el de empleado
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/assets/images/logos/logocine.png" />
    <link rel="stylesheet" href="~/Content/assets/css/styles.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed" style="padding-bottom:40px;">

        <!-- Acá había una barra superior pero eran promociones de comprar plantillas -->
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Dashboard", "EmpleadoMetricas")" class="text-nowrap logo-img">
                        <img src="~/Content/assets/images/logos/logocine.png" alt="Logo" style="width: 100px; height: auto;">
                    </a>

                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            <span class="hide-menu">Home</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="@Url.Action("Dashboard", "EmpleadoMetricas")">
                                <iconify-icon icon="ph:ticket-duotone"></iconify-icon>
                                <span class="hide-menu">Dashboard</span>
                            </a>

                        </li>



                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="@Url.Action("HistorialReservas", "EmpleadoHistorial")">
                                <iconify-icon icon="mdi:clipboard-text-clock-outline"></iconify-icon>
                                <span class="hide-menu">Historial Reservas</span>
                            </a>
                        </li>



                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="@Url.Action("Crear", "EmpleadoCrear")">
                                <iconify-icon icon="solar:calendar-add-line-duotone"></iconify-icon>
                                <span class="hide-menu">Crear Reservas</span>
                            </a>
                        </li>





                    </ul>

                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper" style="margin-bottom:40px;">

            <div class="body-wrapper-inner">
                <div class="container-fluid">
                    <!--  Header Start -->
                    <header class="app-header">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <ul class="navbar-nav">
                                <li class="nav-item d-block d-xl-none">
                                    <a class="nav-link sidebartoggler " id="headerCollapse" href="javascript:void(0)">
                                        <i class="ti ti-menu-2"></i>
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link " href="javascript:void(0)" id="drop1" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <iconify-icon icon="solar:bell-linear" class="fs-6"></iconify-icon>
                                        <div class="notification bg-primary rounded-circle"></div>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-animate-up" aria-labelledby="drop1">
                                        <div class="message-body">
                                            <a href="javascript:void(0)" class="dropdown-item">
                                                Item 1
                                            </a>
                                            <a href="javascript:void(0)" class="dropdown-item">
                                                Item 2
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                                <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link " href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                           aria-expanded="false">
                                            <img src="../Content/assets/images/profile/trabajador.png" alt="" width="35" height="35"
                                                 class="rounded-circle">

                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                            <div class="message-body">
                                                <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                                    <i class="ti ti-user fs-6"></i>
                                                    <p class="mb-0 fs-3">Mi Perfil</p>
                                                </a>

                                                <form method="post" action="@Url.Action("Logout", "Home")">
                                                    <button type="submit" class="btn btn-outline-primary mx-3 mt-2 d-block">Cerrar sesión</button>
                                                </form>

                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </header>
                    <!--  Header End -->
                    <div class="row mb-4" ">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Ganancias totales</h5>
                                    <h3 class="card-text">@String.Format("{0:C}", ViewBag.GananciasTotales)</h3>
                                    <form id="filtroFechas" class="mt-3">
                                        <div class="form-group">
                                            <label for="fechaInicio">Desde:</label>
                                            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="@(ViewBag.FechaInicio != null ? ((DateTime)ViewBag.FechaInicio).ToString("yyyy-MM-dd") : "")">
                                        </div>
                                        <div class="form-group">
                                            <label for="fechaFin" style="margin-top:10px;">Hasta:</label>
                                            <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="@(ViewBag.FechaFin != null ? ((DateTime)ViewBag.FechaFin).ToString("yyyy-MM-dd") : "")">
                                        </div>
                                        <button type="submit" class="btn btn-primary" style="padding: 3px 8px; font-size: 14px; white-space: nowrap; margin-top: 40px;margin-bottom:10px">Filtrar</button>
                                        <!-- Botón para descargar PDF con estilos mejorados -->
                                        <a href="@Url.Action("ImprimirDashboard", "EmpleadoMetricas", new {
                                        fechaInicio = ViewBag.FechaInicioParam ?? null,
                                        fechaFin = ViewBag.FechaFinParam ?? null
                                        })"
                                           class="btn btn-primary"
                                           style="padding: 3px 8px; font-size: 14px; white-space: nowrap; background-color: #800080; border-color: #800080; margin-top: 40px; margin-bottom: 10px"
                                           target="_blank">
                                            <i class="fas fa-file-pdf me-2"></i> Imprimir PDF
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Ganancias del mes</h5>
                                    <h3 class="card-text">@String.Format("{0:C}", ViewBag.GananciasMesActual)</h3>
                                    <p class="text-muted">@DateTime.Now.ToString("MMMM yyyy")</p>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h5 class="card-title">Reservas confirmadas</h5>
                                    <h3 class="card-text">@ViewBag.PorcentajeConfirmadas%</h3>
                                    <p class="text-muted">Del total de reservas</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Clientes registrados</h5>
                                    <h3 class="card-text">@ViewBag.PorcentajeClientesRegistrados%</h3>
                                    <p class="text-muted">Del total de reservas</p>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h5 class="card-title">Reservas canceladas</h5>
                                    <h3 class="card-text">@ViewBag.PorcentajeCanceladas%</h3>
                                    <p class="text-muted">Del total de reservas</p>
                                </div>
                            </div>
                        </div>




                    </div>
                </div>


                <div class="container">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title" style="margin-bottom:15px; text-align:center">Reservas por Estado</h5>
                                <canvas id="barChart" width="400" height="400"></canvas>
                            </div>
                            <div class="col-md-6">
                                <h5 class="card-title" style="margin-bottom: 15px; text-align: center">Reservas por Método de Pago</h5>
                                <canvas id="pieChart" width="400" height="400"></canvas>
                            </div>
                        </div>
                    }
                </div>


            </div>
        </div>
    </div>
    </div>
    <script src="~/Content/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/sidebarmenu.js"></script>
    <script src="~/Content/assets/js/app.min.js"></script>
    <script src="~/Content/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Content/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Content/assets/js/dashboard.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>

@if (ViewBag.Error == null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var script = document.createElement('script');
            script.src = 'https://cdn.jsdelivr.net/npm/chart.js';
            script.onload = function() {

               new Chart(
               document.getElementById('barChart').getContext('2d'),
                {
              type: 'bar',
            data: {
            labels: @Html.Raw(Json.Encode(ViewBag.LabelsBarras)),
                datasets: [{
                label: 'Reservas',
                data: @Html.Raw(Json.Encode(ViewBag.DatosBarras)),
                backgroundColor: @Html.Raw(Json.Encode(ViewBag.ColoresBarras)),
                borderWidth: 1
                }]
            },
            options: {
            scales: {
                y: {
                    beginAtZero: true
                }
                },
            plugins: {
                legend: {
                    display: false
                }
            }
            }
            }
            );

                new Chart(
                    document.getElementById('pieChart').getContext('2d'),
                    {
                        type: 'pie',
                        data: {
                            labels: @Html.Raw(Json.Encode(ViewBag.LabelsPie)),
                            datasets: [{
                                data: @Html.Raw(Json.Encode(ViewBag.DatosPie)),
                                backgroundColor: @Html.Raw(Json.Encode(ViewBag.ColoresPie)),
                                borderWidth: 1
                            }]
                        }
                    }
                );
            };
            document.head.appendChild(script);
        });

        document.getElementById('filtroFechas').addEventListener('submit', function(e) {
            e.preventDefault();

            var fechaInicio = document.getElementById('fechaInicio').value;
            var fechaFin = document.getElementById('fechaFin').value;

            if (!fechaInicio || !fechaFin) {
                alert('Por favor seleccione ambas fechas');
                return;
            }


            window.location.href = window.location.pathname + '?fechaInicio=' + fechaInicio + '&fechaFin=' + fechaFin;
        });


        


    </script>
}



